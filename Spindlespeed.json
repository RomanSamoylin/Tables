import org.json.JSONArray;
import org.json.JSONObject;

public class SpindleSpeedChart {

 public static void main(String[] args) {
 List<Double> spindleSpeeds = new ArrayList<>();
 spindleSpeeds.add(1076.640015);
 spindleSpeeds.add(0.000000);
 spindleSpeeds.add(1076.640015);
 spindleSpeeds.add(0.000000);
 spindleSpeeds.add(1076.640015);
 spindleSpeeds.add(0.000000);

 SpindleSpeedAnalysis analysis = new SpindleSpeedAnalysis(spindleSpeeds);
 double[] coefficients = analysis.getCoefficients();

 JSONArray data = new JSONArray();
 JSONArray labels = new JSONArray();

 for (int i = 0; i < spindleSpeeds.size(); i++) {
 data.put(spindleSpeeds.get(i));
 labels.put(i);
 }

 JSONObject config = new JSONObject();
 config.put("type", "line");
 config.put("data", new JSONObject());
 config.getJSONObject("data").put("labels", labels);
 config.getJSONObject("data").put("datasets", new JSONArray());

 JSONObject dataset = new JSONObject();
 dataset.put("label", "Spindle Speed");
 dataset.put("data", data);
 dataset.put("borderColor", "#3e95cd");
 dataset.put("fill", false);

 config.getJSONArray("data").put(dataset);

 JSONObject options = new JSONObject();
 options.put("responsive", true);
 options.put("maintainAspectRatio", false);
 options.put("scales", new JSONObject());
 options.getJSONObject("scales").put("xAxes", new JSONArray());
 options.getJSONObject("scales").getJSONArray("xAxes").put(new JSONObject()
 .put("type", "linear")
 .put("position", "bottom")
 );

 JSONObject canvas = new JSONObject();
 canvas.put("type", "line");
 canvas.put("id", "spindleSpeedChart");
 canvas.put("data", config);
 canvas.put("options", options);

 System.out.println(canvas.toString());
 }
}
